{
	"name"			: "ipub/mobile-detect",
	"type"			: "library",
	"description"	: "Nette extension for detect mobile devices, managing mobile view types, redirect to mobile version on iPublikuj framework",
	"keywords"		: ["mobile", "mobile detect", "nette mobile", "mobile view managing", "mobile redirect", "nette", "ipub", "framework", "tools"],
	"homepage"		: "https://github.com/iPublikuj/mobile-detect",
	"license"		: ["BSD-3-Clause", "GPL-2.0", "GPL-3.0"],

	"authors": [
		{
			"name"		: "Adam Kadlec",
			"homepage"	: "http://www.ipublikuj.eu/"
		}
	],

	"support":{
		"email"		:"support@ipublikuj.eu",
		"issues"	:"https://github.com/iPublikuj/mobile-detect/issues"
	},

	"require": {
		"php"							: ">=5.3.0",
		"nette/application"				: "~2.2",
		"nette/di"						: "~2.2",
		"nette/http"					: "~2.2",
		"nette/utils"					: "~2.2",
		"latte/latte"					: "~2.2",
		"mobiledetect/mobiledetectlib"	: "2.8.*"
	},

	"require-dev": {
		"nette/bootstrap"	: "~2.2",
		"nette/tester"		: "@dev",
		"janmarek/mockista"	: "@dev"
	},

	"autoload": {
		"psr-0": {
			"IPub\\MobileDetect\\": "src/"
		}
	}
}